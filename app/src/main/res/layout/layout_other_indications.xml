<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorCard"
    app:cardCornerRadius="@dimen/dp_20"
    app:cardElevation="@dimen/dp_4"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/RobotoRegular20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/other" />

        <LinearLayout
            android:id="@+id/otherIndicationsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_24"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/temperatureTextView"
                style="@style/RobotoMedium16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_4"
                app:drawableStartCompat="@drawable/ic_weather"
                tools:text="27Â°C" />

            <TextView
                android:id="@+id/humidityTextView"
                style="@style/RobotoMedium16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_4"
                app:drawableStartCompat="@drawable/ic_humidity"
                tools:text="43%" />

            <TextView
                android:id="@+id/timeTextView"
                style="@style/RobotoMedium16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_4"
                app:drawableStartCompat="@drawable/ic_clock"
                tools:text="13:44:52" />

            <TextView
                android:id="@+id/deviceIdTextView"
                style="@style/RobotoMedium16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_4"
                app:drawableStartCompat="@drawable/ic_device"
                tools:text="101" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>